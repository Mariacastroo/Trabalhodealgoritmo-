public class ProcuraDescricao {
    public static void main(String[] args) {
        String descricaoProduto = "Smartphone Android com câmera de alta resolução.";
        String parteDescricao = "câmera";

        boolean resultado = procurarParteNaDescricao(descricaoProduto, parteDescricao);

        System.out.println(resultado);
    }

    
    static boolean procurarParteNaDescricao(String descricao, String parte) {
        
        return descricao.toLowerCase().contains(parte.toLowerCase());
    }
}
